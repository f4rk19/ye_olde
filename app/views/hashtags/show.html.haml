.header
  = render 'olde/header'
.main
  .main__photos
    %h2
      = @hashtag.hashname
    - @photos.each do |photo|
      .photo-frame
        .photo-frame__photo-info
          .created-at
            = l photo.created_at
          .detail-form
            =link_to photo_path(photo.id) do
              Detail
        = image_tag photo.image.url, class: 'photo-frame__image'
        %p.photo-frame__content
          = render_with_hashtags(photo.content)
  = paginate @photos
  .page-load-status

.footer