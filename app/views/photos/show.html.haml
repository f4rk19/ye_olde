.header
  = render 'olde/header'
.main
  .main__photos
    %h2 Photo detail
    = render 'photo'
  -if @photo.description.present?
    .main__show-map
      =icon("fas","map-marker-alt")
      =@photo.description
    .main__map-area
      #map{:style => "width: 100%; height: 100%;"}
      .return-btn
        =icon("fas","times")
        Close
  .main__comments
    =render "comments/comments"

.footer
  =render "olde/footer"

:javascript
  function initMap() {
  var description = {lat: gon.photo.latitude, lng: gon.photo.longitude};
  var map = new google.maps.Map(
      document.getElementById('map'), {zoom: 10, center: description});
  var marker = new google.maps.Marker({position: description, map: map});
  }