.AccountPage
  .AccountPage__title
    %h2 Edit Account
    = link_to "Sign out", destroy_user_session_path,method: :delete, class: 'Button'
    = link_to "Back to Top", :back, class: 'Button'
  .AccountPage__form
    = form_for(current_user, {multipart: true}) do |f|
      .FormField
        .FormField__label--normal
          = f.label :name
        .FormField__input--normal
          = f.text_field :name, autofocus: true
      .FormField
        .FormField__label--normal
          = f.label :email
        .FormField__input--normal
          = f.email_field :email
      .FormField
        .FormField__label--normal
          = f.label :image, class: "photo-box__user-image" do
            = icon("far","user-circle",class: 'image-icon')
            = f.file_field :image, class: 'photo-box__user-image__file'
            %p"Change your picture"
      = f.submit "Update", class: 'Button UserButton'
  .AccountPage__close
    = link_to root_path do
      = icon("fas","times")
