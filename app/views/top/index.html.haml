.header
  - if user_signed_in?
    =render "olde/header-top"
  - else
    %ul.header__user-in
      %li.user-plus
        =link_to new_user_registration_path do
          = icon('fas', 'user-plus')
          New user registration
      %li.sign-in
        =link_to user_session_path do
          = icon('fas', 'sign-in-alt')
          Sign in

.main-top
  - if user_signed_in?
    = image_tag "portrait-4130603.jpg", :alt =>"top image",class: "main-top__image"
    %p.main-top__sub-content
      We can go back to that place.

  - else
    = image_tag "vintage-2809976_1920.jpg", :alt =>"top image",class: "main-top__image"
    %p.main-top__sub-content
      A place that you don't know...
  %p.main-top__title
    Ye Olde
  .top-search-form
    .search-form
      =render 'olde/search'
.footer
  =render "olde/footer"